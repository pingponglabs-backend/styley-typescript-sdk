{
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "es2022",
      "DOM"
    ],
    "module": "NodeNext",
    "target": "es5",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "build",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  }
}